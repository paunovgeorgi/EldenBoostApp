@using EldenBoost.Common.Enumerations
@model ArticleReadViewModel

@{
	ViewBag.Title = @Model.Title;	
}

}

<div class="row" id="article-row" style="margin-top:100px">

	<img src="@Model.ImgUrl" class="img-read" alt="Article Image" />
	<h2 class="mt-3 text-center">@Model.Title</h2>
	<div class="mt-2">
		@Html.Raw(Model.Content)
	</div>
	<div class="mt-4">
		<p class="text-start">Published On: @Model.PublishDate</p>
		<p class="text-end">Author: <b>@Model.Author</b></p>
	</div>

</div>
