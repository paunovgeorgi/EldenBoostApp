                                    <button type="submit" class="btn btn-outline-danger">Deactivate</button>
                                </form>
                            </label>
                        }
                        else
                        {
                            <label>
                                <form asp-controller="Service" asp-action="Activate" asp-route-id="@article.Id" method="post" style="display: inline;">
                                    <button type="submit" class="btn btn-success">Activate</button>
                                </form>
                            </label>
                        }
                    </td> *@
                    <td><a asp-controller="Article" asp-action="Edit" asp-area="" asp-route-id="@article.Id" class="btn btn-outline-light">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
