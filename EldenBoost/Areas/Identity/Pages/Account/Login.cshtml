@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-4 login-box">
        <section>
            <form id="account" method="post">
                <h2 class="text-center">Use your email to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="user-box">
                    <input asp-for="Input.Email" class="" autocomplete="username" aria-required="true" required />
                    <label asp-for="Input.Email" class=""></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="Input.Password" class="" autocomplete="current-password" aria-required="true" required />
                    <label asp-for="Input.Password" class=""></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox" style="font-size:14px;">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input"  asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                    <center>
                    <button id="login-submit" type="submit" class="btn">Log in<span></span></button>
                    <span></span>
                    </center>

               @*  <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div> *@
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
